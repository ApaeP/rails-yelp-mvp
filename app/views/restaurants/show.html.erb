<h1 class="text-center mb-5"><%= @restaurant.name %></h1>
<span>
  <h5>
    <em><%= @restaurant.address %></em>
  </h5>
  <p>
    <%= @restaurant.phone_number %>
  </p>
</span>

<ul>
  <% @restaurant.reviews.each do |review| %>

  <li><%= review.content %> - <%= review.rating %>/5</li>

  <% end %>
</ul>

<%= link_to 'Review this restaurant', new_restaurant_review_path(@restaurant), class: "btn btn-info" %>

<%= link_to 'Back to Index', restaurants_path, class: "btn btn-info" %>

